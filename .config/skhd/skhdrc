# change window focus within space
ctrl + shift + cmd - j : yabai -m window --focus south
ctrl + shift + cmd - k : yabai -m window --focus north
ctrl + shift  + cmd - h : yabai -m window --focus west
ctrl + shift  + cmd - l : yabai -m window --focus east

ctrl + shift  + cmd - down : yabai -m window --focus south
ctrl + shift  + cmd - up : yabai -m window --focus north
ctrl + shift  + cmd - left : yabai -m window --focus west
ctrl + shift  + cmd - right : yabai -m window --focus east

# rotate layout clockwise
shift + cmd - r : yabai -m space --rotate 270

# flip along y-axis
shift + cmd - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + cmd - x : yabai -m space --mirror x-axis

# toggle window float
shift + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
shift + cmd - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + cmd - e : yabai -m space --balance

# swap windows
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - h : yabai -m window --swap west
shift + cmd - l : yabai -m window --swap east

shift + cmd - down : yabai -m window --swap south
shift + cmd - up : yabai -m window --swap north
shift + cmd - left : yabai -m window --swap west
shift + cmd - right : yabai -m window --swap east

# move window and split
ctrl + cmd - j : yabai -m window --warp south
ctrl + cmd - k : yabai -m window --warp north
ctrl + cmd - h : yabai -m window --warp west
ctrl + cmd - l : yabai -m window --warp east

ctrl + cmd - down : yabai -m window --warp south
ctrl + cmd - up : yabai -m window --warp north
ctrl + cmd - left : yabai -m window --warp west
ctrl + cmd - right : yabai -m window --warp east

#move window to prev and next space
shift + cmd - o : yabai -m window --space prev;
shift + cmd - n : yabai -m window --space next;

# move window to space #
shift + cmd - 1 : yabai -m window --space 1;
shift + cmd - 2 : yabai -m window --space 2;
shift + cmd - 3 : yabai -m window --space 3;
shift + cmd - 4 : yabai -m window --space 4;
shift + cmd - 5 : yabai -m window --space 5;
shift + cmd - 6 : yabai -m window --space 6;
shift + cmd - 7 : yabai -m window --space 7;

# stop/start/restart yabai
ctrl + cmd - q : yabai --stop-service
ctrl + cmd - s : yabai --start-service
ctrl + cmd - r : yabai --restart-service
#restart skhd
alt + ctrl + cmd - r : skhd --restart-service
# Close focused window
ctrl + cmd - w : yabai -m window --close

# Applications

alt + cmd - e : open -a Finder.app # file explorer
alt + cmd - b : open --background 'velja:open?url=http://localhost:3066'  # blank new tab
alt + cmd - x : open -a Ghostty.app # terminal
alt + cmd - r : open -a Raycast.app # Spotlight
